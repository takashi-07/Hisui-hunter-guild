<h1 class="text-5xl text-white text-center mt-20"><%= @mode_name %></h1>
<% if session[:started] %>
  <% if flash[:notice] %>
    <div class="flex items-center justify-center h-screen">
      <p class="text-8xl text-red-500">〇</p>
    </div>
    <script>
      setTimeout(function() {
        window.location.reload();
      }, 500);
    </script>
  <% elsif flash[:alert] %>
    <div class="flex items-center justify-center h-screen">
      <p class="text-8xl text-blue-500">×</p>
    </div>
    <script>
      setTimeout(function() {
        window.location.reload();
      }, 500);
    </script>
  <% else %>
    <h1 class="text-5xl text-white text-center mt-10">問題 <%= session[:total_count]&.next %></h1>
    <div class="flex justify-center mt-10">
      <div class="flex mt-10">
        <div class="flex justify-center">
          <% buttons.each do |button| %>
            <div class="flex items-center">
              <%= button_to answer_path(answer: button[0].split('/')[0]), method: :get, class: 'image-button' do %>
                <%= image_tag button[0], alt: button[1], class: 'rounded-full w-24 h-24 sm:w-32 sm:h-32 mr-5' %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <%= link_to '最初からやり直す', start_path(mode: 'normal'), class: 'btn btn-primary w-full sm:w-auto mt-10 rounded-lg bg-blue-500 border-none text-white px-8 py-4 text-center no-underline inline-block text-lg ' %>
    <%= link_to "モードを変更する", questions_path, class: "w-full sm:w-auto mt-10 rounded-lg bg-green-500 border-none text-white px-8 py-4 text-center no-underline inline-block text-lg" %>
  <% end %>
<% else %>
  <%= link_to 'ゲームスタート', start_path(mode: 'normal'), class: 'btn btn-primary w-full sm:w-auto mt-10 rounded-lg bg-blue-500 border-none text-white px-8 py-4 text-center no-underline inline-block text-lg ' %>
  <%= link_to "ゲーム画面へ", questions_path, class: "w-full sm:w-auto mt-10 rounded-lg bg-green-500 border-none text-white px-8 py-4 text-center no-underline inline-block text-lg" %>
<% end %>
